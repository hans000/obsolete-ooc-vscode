{
	"name": "obsolete-ooc",
	"displayName": "OOOC",
	"description": "新时代下无用的OOC生成器，兼容mcfunction文件",
	"version": "0.2.4",
	"publisher": "hans0000",
	"engines": {
		"vscode": "^1.46.0"
	},
	"keywords": ["minecraft", "command", "mcfunction", "ooc"],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:mcfunction",
		"onCommand:obsolete-ooc.generate"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "obsolete-ooc.generate",
				"title": "generate"
			}
		],
		"keybindings": [
			{
				"command": "obsolete-ooc.generate",
				"key": "ctrl+k ctrl+g",
				"mac": "cmd+k cmd+g",
				"when": "editorFocus && resourceLangId == mcfunction"
			}
		],
		"snippets": [
            {
                "language": "mcfunction",
				"path": "./snippets/config.json"
            }
		],
		"configuration": {
			"title": "OOOC",
			"properties": {
				"OOOC.env.version": {
					"type": "string",
					"enum": [ "1.9", "1.10", "1.11", "1.12", "1.13", "1.14", "1.15", "1.16" ],
					"default": "1.16",
					"description": "设置游戏版本，现共三个版本差异1.9-1.10 1.11-1.12 1.13-1.6"
				},
				"OOOC.env.size": {
					"type": "string",
					"description": "设置生成OOC的尺寸，格式正整数<x> <z>",
					"default": "1 1",
					"pattern": "^\\d+ \\d+$"
				},
				"OOOC.env.offset": {
					"type": "string",
					"description": "设置生成OOC距离触发方块的偏移值，格式<x> <y> <z>",
					"default": "2 0 0",
					"pattern": "^(-?\\d+) (-?\\d+) (-?\\d+)$"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"license": "MIT",
	"repository": {
        "type": "git",
        "url": "https://github.com/haima16/obsolete-ooc-vscode"
    },
    "homepage": "https://github.com/haima16/obsolete-ooc-vscode"
}
